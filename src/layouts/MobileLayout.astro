---
// src/layouts/MobileLayout.astro
const { title = 'GBA' } = Astro.props;
---
<!doctype html>
<html lang="it">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Archivio Botanico" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<title>{title}</title>
</head>
<body>
  <div class="main-slot-wrapper">
		<slot /> </div>

  <slot name="overlay" />

</body>
</html>

<style is:global>
  /* Regole globali per riempire lo schermo */
  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
    font-family: sans-serif;
    background-color: #000;
  }

  /* Questo wrapper assicura che il contenuto principale
    (il tuo <main>) abbia un genitore alto 100%
  */
  .main-slot-wrapper {
    height: 100%;
    width: 100%;
    /* Se un overlay Ã¨ attivo, non vogliamo scrollare il main */
    overflow: hidden; 
  }
</style>