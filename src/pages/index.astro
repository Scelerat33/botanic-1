// FILE: src/pages/index.astro
import Airtable from 'airtable';

// 1. CONFIGURAZIONE AIRTABLE
const base = new Airtable({
  apiKey: import.meta.env.PUBLIC_AIRTABLE_API_KEY
}).base(import.meta.env.PUBLIC_AIRTABLE_BASE_ID);

// 2. RECUPERO DATI
let items = [];
try {
  const records = await base(import.meta.env.PUBLIC_AIRTABLE_TABLE_NAME)
    .select({ 
        maxRecords: 50,
        sort: [{field: "Name", direction: "asc"}] 
    })
    .all();
 
  items = records.map(record => ({
    id: record.id,
    nome: record.fields.Name || 'N/D',
    image: record.fields.Photo?.[0]?.thumbnails?.large?.url || record.fields.Photo?.[0]?.url,
  }));
} catch (error) {
  console.error('Errore caricamento dati:', error);
}

const titolo = "URBINO BOTANICAL GARDEN";
---

<html lang="it">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{titolo} - Home</title>

<style>
  /* --- IMPOSTAZIONI GENERALI E TEMA --- */
  :root {
    --bg-color: #ffffff;
    --text-color: #111111;
    --subtle-text-color: #000000;
    --border-color: #eaeaea;
    --font-main: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }
  
  html.dark {
    --bg-color: #111111;
    --text-color: #eaeaea;
    --subtle-text-color: #000000;
    --border-color: #333333;
  }

  body {
    font-family: var(--font-main);
    background-color: var(--bg-color);
    color: var(--text-color);
    margin: 0;
  }

  /* --- GRIGLIA DI IMMAGINI DI SFONDO --- */
  .landing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 3rem;
    padding: 1rem;
    /* Rimuoviamo l'allineamento specifico per lasciare che i riquadri si allunghino */
    /* align-items: end; */
  }

  /* --- STILE DEI SINGOLI ELEMENTI DELLA GRIGLIA --- */
  .grid-item {
    /* MODIFICA: Usiamo Flexbox per controllare l'allineamento interno */
    display: flex;
    flex-direction: column;
  }

  /* NUOVO: Contenitore per l'immagine che si espande e centra */
  .image-container {
    flex-grow: 1; /* Occupa tutto lo spazio verticale disponibile */
    display: flex;
    align-items: center; /* Centra l'immagine verticalmente al suo interno */
  }

  .grid-item img {
    width: 100%;
    height: auto;
    display: block;
  }

  .item-name {
    display: block;
    text-align: center;
    padding: 0.5rem;
    font-size: 0.8rem;
    color: var(--subtle-text-color);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* --- CONTENUTO CENTRALE (TITOLO E BOTTONE) --- */
  .center-content {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 2;
    text-align: center;
    pointer-events: none;
  }
  
  .main-title {
    font-size: 1rem; 
    font-weight: 500;
    margin: 0;
    color: var(--text-color);
  }

  .explore-button {
    pointer-events: all;
    margin-top: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    color: var(--text-color);
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .explore-button:hover {
    opacity: 3;
    
  }
</style>
</head>
<body>
    <div class="landing-grid">
        {items.map(item => (
            <div class="grid-item">
                <div class="image-container">
                    <img src={item.image || 'https://via.placeholder.com/200'} alt={item.nome} loading="lazy" />
                </div>
                <span class="item-name">{item.nome}</span>
            </div>
        ))}
    </div>

    <div class="center-content">
        <h1 class="main-title">{titolo}</h1>
        <a href="/archivio" class="explore-button">ESPLORA</a>
    </div>
</body>
</html>