---
import MobileLayout from '../layouts/MobileLayout.astro';

// Dati d'esempio per la pagina
const location = {
    name: "Urbino Botanical Garden", 
    city: "Urbino", 
    country: "Italy", 
    coord1: "43°43'38.86\"N", 
    coord2: "12°38'11.98\"E"
};
---
<MobileLayout>
  <div class="page-wrapper-urbino">
    
    <header class="mobile-header theme-dark" transition:persist>
      <a href="/" class="mobile-header-logo" transition:name="logo-gba">GBA</a>
      <div class="mobile-header-right">
        <a href="/personale">YOUR</a>
        <a href="/locations">LOCATION</a>
      </div>
    </header>

    <div class="header-section">
      <div class="title-section">
        <h1>{location.name}</h1>
        <div class="sub-header">
          <span>{location.city}, {location.country}</span>
          <div class="coords">
            <span>{location.coord1}</span>
            <span>{location.coord2}</span>
          </div>
        </div>
      </div>
    </div>

    <main class="main-content">
      
      <div class="download-section">
        <h3>HELLO LUCA,<br>DOWNLOAD THE URBINO'S BOTANICAL GARDEN ARCHIVE</h3>
        <div class="download-link-wrapper">
          <p>Download a pdf with all the species present in the garden</p>
         <a href="/urbino'sarchive.pdf" class="download-btn" download>DOWNLOAD NOW</a>
        </div>
      </div>

      <div class="info-section">
        <p>From 3rd March to 28th November</p>
        <p>Monday–Friday<br>8.30–13.30</p>
        <p>Free entry</p>
      </div>

      <footer class="page-footer">
        <a href="/scanner" class="footer-link">PLANTS SCANNER</a>
        <a href="/personale" class="footer-link">YOUR COLLECTION</a>
      </footer>

    </main>
  </div>
</MobileLayout>

<style>
  /* --- CSS HEADER (COPIATO) --- */
  .mobile-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0.5rem; 
    box-sizing: border-box;
    transition: background-color 0.3s ease;
  }

  .mobile-header-logo {
    font-family: 'Monument Grotesk Trial', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    text-decoration: none;
    z-index: 1;
  }

  .mobile-header-right {
    font-family: 'Monument Grotesk Mono Trial', monospace;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    text-align: right;
    z-index: 1;
    display: flex;
    gap: 0.8rem;
  }

  .mobile-header-right a,
  .mobile-header-right span {
    text-decoration: none;
    color: inherit; /* Eredita il colore dal genitore (bianco o nero) */
  }
  
  .mobile-header.theme-light {
    background-color: #ffffff;
    color: #000000;
    border-bottom: 1px solid #eee;
  }
  .mobile-header.theme-light .mobile-header-logo,
  .mobile-header.theme-light .mobile-header-right a,
  .mobile-header.theme-light .mobile-header-right span {
    color: #000;
  }

  .mobile-header.theme-dark {
    background-color: #000000; 
    color: #ffffff;
  }
  .mobile-header.theme-dark .mobile-header-logo,
  .mobile-header.theme-dark .mobile-header-right a,
  .mobile-header.theme-dark .mobile-header-right span {
    color: #fff;
  }
  .mobile-header.theme-dark .mobile-header-right svg path {
    stroke: #fff;
  }
  /* --- FINE CSS HEADER --- */


  .page-wrapper-urbino {
   display: flex;
    flex-direction: column;
    min-height: 100dvh;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  /* --- Sezione Superiore (Bianca) --- */
  .header-section {
    background-color: #ffffff;
    color: #000000;
    border-bottom: 1px solid #eee;
    
    /* MODIFICA: Aggiunto padding-top per far spazio all'header fisso */
    padding-top: 4rem; 
  }
  
  /* --- CSS VECCHIO HEADER RIMOSSO --- */
  /* .page-header, .header-link, .top-left, .top-right, .header-link-item */
  /* sono stati eliminati */


  /* Titolo e coordinate */
  .title-section {
    padding: 1.5rem;
    padding-top: 1rem; /* Mantenuto padding originale per spazio extra */
    background: #fff;
  }
  h1 {
    font-size: 1.8rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: #000;
  }
  .sub-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    color: #666;
    font-size: 0.9rem;
  }
  .coords {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    font-size: 0.9rem;
    color: #666;
    flex-shrink: 0;
    padding-left: 1rem;
  }

  /* --- Sezione Inferiore (Nera) --- */
  .main-content {
    flex-grow: 1;
    background: #000;
    color: #fff;
    padding: 2.5rem 1.5rem;
    position: relative;
    padding-bottom: 8rem; 
  }
  .download-section h3 {
    font-size: 1.2rem;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 1rem 0;
  }
  .download-link-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #333;
    border-bottom: 1px solid #333;
    padding: 1rem 0;
  }
  .download-link-wrapper p {
    margin: 0;
    font-size: 0.9rem;
    color: #999;
    max-width: 60%;
    line-height: 1.4;
  }
  .download-btn {
    color: #fff;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
    flex-shrink: 0;
  }
  
  .info-section {
    margin-top: 2.5rem;
    font-size: 0.9rem;
    line-height: 1.6;
  }
  .info-section p {
    margin: 0 0 1.2rem 0;
  }

  .page-footer {
    position: absolute;
    bottom: 2.5rem;
    left: 1.5rem;
    right: 1.5rem;
    display: flex;
    justify-content: space-between;
    z-index: 10;
  }
  .footer-link {
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
  }
</style>