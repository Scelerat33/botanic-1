---
import MobileLayout from '../layouts/MobileLayout.astro';

// Dati d'esempio (invariati)
const locations = [
  { name: "Padua Botanical Garden", city: "Padua", country: "Italy", coord1: "43°43'38.86\"N", coord2: "12°38'11.98\"E", isClickable: false },
  { name: "Urbino Botanical Garden", city: "Urbino", country: "Italy", coord1: "43°43'38.86\"N", coord2: "12°38'11.98\"E", isClickable: true, href: "/urbino" },
  { name: "Kirstenbosch Garden", city: "Cape Town", country: "South Africa", coord1: "43°43'38.86\"N", coord2: "12°38'11.98\"E", isClickable: false },
  { name: "Giardini Botanici Hanbury", city: "Ventimiglia", country: "Liguria", coord1: "43°43'38.86\"N", coord2: "12°38'11.98\"E", isClickable: false },
  { name: "Orto Botanico di Brera", city: "Milan", country: "Italy", coord1: "43°43'38.86\"N", coord2: "12°38'11.98\"E", isClickable: false },
  { name: "Singapore Botanic Garden", city: "Singapore", country: "", coord1: "43°43'38.86\"N", coord2: "12°38'11.98\"E", isClickable: false },
];
---
<MobileLayout>
  <div class="page-wrapper-locations">

    {/* Header Corretto */}
    <header class="mobile-header theme-dark" transition:persist>
      <a href="/" class="mobile-header-logo" transition:name="logo-gba">GBA</a>
      <div class="mobile-header-right">
        <span>YOUR LOCATION</span>
      </div>
    </header>

    <main class="locations-list">
      {locations.map(loc => (
        // Div esterno per layout
        <div class="location-item">
          {loc.isClickable ? (
            // Link solo sui dettagli
            <a href={loc.href} class="item-details item-details-link">
              <h2 class="item-name">{loc.name}</h2>
              <span class="item-city">{loc.city}{loc.country && `, ${loc.country}`}</span>
            </a>
          ) : (
            // Div se non cliccabile
            <div class="item-details">
              <h2 class="item-name">{loc.name}</h2>
              <span class="item-city">{loc.city}{loc.country && `, ${loc.country}`}</span>
            </div>
          )}
          {/* Link coordinate separato */}
          <a
            href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(loc.coord1)},${encodeURIComponent(loc.coord2)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="item-coords coords-link"
          >
            <span>{loc.coord1}</span>
            <span>{loc.coord2}</span>
          </a>
        </div>
      ))}
    </main>

    {/* Footer Corretto */}
    <footer class="page-footer">
        <a href="/scanner" class="footer-link">PLANTS SCANNER</a>
        <a href="/personale" class="footer-link">YOUR COLLECTION</a>
    </footer>

  </div>
</MobileLayout>

{/* CSS COMPLETO E CORRETTO */}
<style>
  /* --- CSS HEADER (Ripristinato) --- */
  .mobile-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0.5rem;
    box-sizing: border-box;
    transition: background-color 0.3s ease;
  }

  .mobile-header-logo {
    font-family: 'Monument Grotesk Trial', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    text-decoration: none;
    z-index: 1;
  }

  .mobile-header-right {
    font-family: 'Monument Grotesk Mono Trial', monospace;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    text-align: right;
    z-index: 1;
    display: flex;
    gap: 0.8rem;
  }

  .mobile-header-right a,
  .mobile-header-right span {
    text-decoration: none;
  }

  .mobile-header.theme-light {
    background-color: #ffffff;
    color: #000000;
    border-bottom: 1px solid #eee;
  }
  .mobile-header.theme-light .mobile-header-logo,
  .mobile-header.theme-light .mobile-header-right a,
  .mobile-header.theme-light .mobile-header-right span {
    color: #000;
  }

  .mobile-header.theme-dark {
    background-color: #000000;
    color: #ffffff;
  }
  .mobile-header.theme-dark .mobile-header-logo,
  .mobile-header.theme-dark .mobile-header-right a,
  .mobile-header.theme-dark .mobile-header-right span {
    color: #fff;
  }
  .mobile-header.theme-dark .mobile-header-right svg path {
    stroke: #fff;
  }
  /* --- FINE CSS HEADER --- */


  .page-wrapper-locations {
    position: relative;
    width: 100%;
    min-height: 100%; /* Usa min-height per lo scroll */
    background-color: #ffffff;
    color: #000000;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    /* overflow: auto; NON serve qui, lo gestisce il browser */
  }

  /* --- Lista Location (Ripristinato padding) --- */
  .locations-list {
    padding: 3rem 0 6rem 0; /* Padding originale */
  }

  .location-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 1.5rem;
    border-bottom: 1px solid #eee; /* Filetto */
    text-decoration: none;
    color: inherit;
  }
  /* Rimosso hover dall'item intero */

  .item-details {
    display: flex;
    flex-direction: column;
  }

  /* Stili per link dettagli (nuovo) */
  .item-details-link,
  .item-details-link:link,
  .item-details-link:visited {
      color: inherit;
      text-decoration: none;
      cursor: pointer;
  }
  .item-details-link:hover .item-name {
      text-decoration: underline;
  }

  .item-name {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: #000;
  }
  .item-city {
    font-size: 0.9rem;
    color: #666;
  }

  /* Stili Coordinate (Ripristinati) */
  .item-coords {
    font-size: 0.9rem;
    color: #666;
    text-align: right;
    flex-shrink: 0;
    padding-left: 1rem;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  /* Stili per link coordinate (nuovo) */
  .coords-link,
  .coords-link:link,
  .coords-link:visited {
    color: #666;
    text-decoration: none;
    cursor: pointer;
  }
  .coords-link:hover {
     text-decoration: underline;
     color: #333;
  }

  /* Footer (Ripristinato) */
  .page-footer {
    position: absolute; /* Posizionato in fondo a page-wrapper */
    bottom: 2.5rem;
    left: 1.5rem;
    right: 1.5rem;
    display: flex;
    justify-content: space-between;
    z-index: 10;
  }
  .footer-link,
  .footer-link:link,
  .footer-link:visited,
  .footer-link:hover,
  .footer-link:active {
    color: #000; /* Testo nero su sfondo bianco */
    text-decoration: none !important;
    font-weight: 600;
    font-family: monospace;
    font-size: 0.9rem;
    text-transform: uppercase;
  }
</style>